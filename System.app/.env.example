# QuantNexus Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED IN PRODUCTION
# =============================================================================

# JWT Secret for access tokens (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=

# Refresh token secret (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
REFRESH_SECRET=

# Encryption secret for sensitive data (minimum 16 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_SECRET=

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Environment mode (development or production)
NODE_ENV=production

# Server port (Railway will override this)
PORT=8787

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=https://quantnexus.io,https://www.quantnexus.io

# =============================================================================
# ADMIN SEED (Optional - creates admin user on first boot)
# =============================================================================

# Admin email for initial user
ADMIN_EMAIL=admin@quantnexus.io

# Admin password (minimum 8 characters)
ADMIN_PASSWORD=

# =============================================================================
# DATA PATHS (Optional - defaults work for Docker)
# =============================================================================

# Database file path
# DATABASE_PATH=/app/server/data/atlas.db

# Cache database path
# CACHE_DATABASE_PATH=/app/server/data/backtest_cache.db

# Ticker data root directory
# SYSTEM_TICKER_DATA_ROOT=/app/ticker-data

# Tickers list file
# TICKERS_PATH=/app/ticker-data/tickers.txt

# Parquet files directory
# PARQUET_DIR=/app/ticker-data/data/ticker_data_parquet

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Tiingo API key for downloading ticker data
# TIINGO_API_KEY=

# Resend API key for email notifications (not yet implemented)
# RESEND_API_KEY=

# =============================================================================
# LAUNCH PHASE
# =============================================================================

# Set to 'coming-soon' for landing page only, 'alpha' for full app
VITE_LAUNCH_PHASE=alpha

# =============================================================================
# PYTHON (Optional)
# =============================================================================

# Python executable for data download scripts
# PYTHON=python
