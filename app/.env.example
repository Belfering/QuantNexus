# QuantNexus Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED IN PRODUCTION
# =============================================================================

# JWT Secret for access tokens (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=

# Refresh token secret (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
REFRESH_SECRET=

# Encryption secret for sensitive data (minimum 16 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_SECRET=

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Environment mode (development or production)
NODE_ENV=production

# Server port (Railway will override this)
PORT=8787

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=https://quantnexus.io,https://www.quantnexus.io

# =============================================================================
# ADMIN SEED (Optional - creates admin user on first boot)
# =============================================================================

# Admin email for initial user
ADMIN_EMAIL=admin@quantnexus.io

# Admin password (minimum 8 characters)
ADMIN_PASSWORD=

# =============================================================================
# DATA PATHS (Optional - defaults work for Docker)
# =============================================================================

# Database file path
# DATABASE_PATH=/app/server/data/atlas.db

# Cache database path
# CACHE_DATABASE_PATH=/app/server/data/backtest_cache.db

# Ticker data root directory
# SYSTEM_TICKER_DATA_ROOT=/app/ticker-data

# Tickers list file
# TICKERS_PATH=/app/ticker-data/tickers.txt

# Parquet files directory
# PARQUET_DIR=/app/ticker-data/data/ticker_data_parquet

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Tiingo API key for downloading ticker data
# TIINGO_API_KEY=

# Resend API key for email notifications (not yet implemented)
# RESEND_API_KEY=

# =============================================================================
# OAUTH PROVIDERS (Optional - enables social login)
# =============================================================================

# Google OAuth (https://console.cloud.google.com/apis/credentials)
# Redirect URI: http://localhost:8787/api/oauth/google/callback (dev)
#               https://your-domain.com/api/oauth/google/callback (prod)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Discord OAuth (https://discord.com/developers/applications)
# Redirect URI: http://localhost:8787/api/oauth/discord/callback (dev)
#               https://your-domain.com/api/oauth/discord/callback (prod)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# GitHub OAuth (https://github.com/settings/developers)
# Callback URL: http://localhost:8787/api/oauth/github/callback (dev)
#               https://your-domain.com/api/oauth/github/callback (prod)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# OAuth redirect base URL (where callbacks are handled)
# For local development: http://localhost:8787
# For production: https://your-domain.com
OAUTH_REDIRECT_BASE=http://localhost:8787

# =============================================================================
# LAUNCH PHASE
# =============================================================================

# Set to 'coming-soon' for landing page only, 'alpha' for full app
VITE_LAUNCH_PHASE=alpha

# =============================================================================
# PYTHON (Optional)
# =============================================================================

# Python executable for data download scripts
# PYTHON=python
